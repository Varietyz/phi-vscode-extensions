{
  "name": "phicode",
  "displayName": "(φ) PHICODE",
  "description": "Symbolic language support for (φ) PHICODE (.φ files) - Python with symbolic syntax",
  "version": "1.2.0",
  "publisher": "banes-lab",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "build": "npm run compile && vsce package",
    "watch": "tsc -watch -p ./"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes",
    "Snippets"
  ],
  "keywords": [
    "python",
    "phicode",
    "symbolic",
    "unicode",
    "phi"
  ],
  "activationEvents": [
    "onLanguage:phicode"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "copilot": true
  },
  "contributes": {
    "languages": [
      {
        "id": "phicode",
        "aliases": [
          "PHICODE",
          "phicode",
          "Phi Code"
        ],
        "extensions": [
          ".φ"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/phicode-light.png",
          "dark": "./icons/phicode-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "phicode",
        "scopeName": "source.phicode",
        "path": "./syntaxes/phicode.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "phicode-icons",
        "label": "PHICODE File Icons",
        "path": "./icons/phicode-icon-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "phicode",
        "path": "./snippets/phicode.json"
      }
    ],
    "commands": [
      {
        "command": "phicode.convertPythonToPhicode",
        "title": "Convert to PHICODE...",
        "category": "PHICODE",
        "icon": {
          "light": "./icons/phicode-light.png",
          "dark": "./icons/phicode-dark.png"
        }
      },
      {
        "command": "phicode.convertPhicodeToPython",
        "title": "Convert to Python...",
        "category": "PHICODE",
        "icon": {
          "light": "./icons/python-logo.png",
          "dark": "./icons/python-logo.png"
        }
      },
      {
        "command": "phicode.showTutorial",
        "title": "Show PHICODE Symbol Tutorial",
        "category": "PHICODE"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "phicode.convertPythonToPhicode",
          "when": "editorLangId == python && resourceExtname == .py",
          "group": "1_modification@1",
          "title": "Convert to PHICODE (.φ)..."
        },
        {
          "command": "phicode.convertPhicodeToPython",
          "when": "editorLangId == phicode && resourceExtname == .φ",
          "group": "1_modification@1",
          "title": "Convert to Python (.py)..."
        }
      ],
      "explorer/context": [
        {
          "command": "phicode.convertPythonToPhicode",
          "when": "resourceExtname == .py",
          "group": "5_convert@1"
        },
        {
          "command": "phicode.convertPhicodeToPython",
          "when": "resourceExtname == .φ",
          "group": "5_convert@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "phicode.convertPythonToPhicode",
        "key": "ctrl+alt+p",
        "when": "editorLangId == python"
      },
      {
        "command": "phicode.convertPhicodeToPython",
        "key": "ctrl+alt+shift+p",
        "when": "editorLangId == phicode"
      }
    ],
    "configurationDefaults": {
      "[phicode]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.trimAutoWhitespace": true,
        "files.trimTrailingWhitespace": true,
        "editor.autoIndent": "full",
        "editor.formatOnType": true
      }
    },
    "configuration": {
      "title": "PHICODE",
      "properties": {
        "phicode.autoConvert": {
          "type": "boolean",
          "default": true,
          "description": "Automatically suggest converting Python keywords to PHICODE symbols"
        },
        "phicode.symbolHints": {
          "type": "boolean",
          "default": true,
          "description": "Show hover hints for PHICODE symbols"
        },
        "phicode.formatting.spaceAroundOperators": {
          "type": "boolean",
          "default": true,
          "description": "Add spaces around operators"
        },
        "phicode.formatting.spaceAfterCommas": {
          "type": "boolean", 
          "default": true,
          "description": "Add spaces after commas"
        },
        "phicode.formatting.blankLinesAroundClasses": {
          "type": "number",
          "default": 2,
          "description": "Number of blank lines around class definitions"
        },
        "phicode.formatting.blankLinesAroundFunctions": {
          "type": "number",
          "default": 1,
          "description": "Number of blank lines around function definitions"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Varietyz/phicode-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/Varietyz/phicode-vscode-extension/issues"
  },
  "homepage": "https://github.com/Varietyz/phicode-vscode-extension#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.2.2"
  }
}